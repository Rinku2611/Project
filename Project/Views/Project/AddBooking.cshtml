@model DeliveryInatechMvc.Models.BookingTb
@{
    ViewBag.Title = "AddBooking";
}
<html>
<head>
    <link href="~/Bootstrap/CSS/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Bootstrap/JS/bootstrap.bundle.min.js"></script>
    <script src="~/Bootstrap/JS/bootstrap.min.js"></script>
    <script src="~/Bootstrap/JS/popper.min.js"></script>

</head>

<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            @*<img src="~/Images/DeliveryMan.jpg" width="150px" height="100px" />*@
            <img src="~/Images/Blank.jpg" width="150px" height="100px" />
            <div class="collapse navbar-collapse" id="navbarSupportContent">
                <ul class="navbar-nav d-flex me-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Project", "Index") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("About Us", "Project", "Index") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Terms", "Project", "Index") &nbsp;&nbsp;
                    </li>
                </ul>
                <ul class="navbar-nav">

                    <li class="nav-item active">
                        @Html.ActionLink("View Booking", "ViewBooking", "Project") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Logout", "Index", "Project") &nbsp;&nbsp;
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <h4><strong class="text-danger">@TempData["Message"]</strong></h4>
    @using (Html.BeginForm("AddBooking", "Project", FormMethod.Post))
    {
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Customer Id</label>
                        @Html.TextBoxFor(x => x.CustomerId, new { @class = "form-control", @style = "width=600px;" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Date</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @type = "date", @style = "width=600px;" })
                        @Html.ValidationMessageFor(x => x.Date, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Time of PickUp</label>
                        @Html.TextBoxFor(x => x.Time, new { @class = "form-control", @type = "time", @style = "width=600px;" })
                        @Html.ValidationMessageFor(x => x.Time, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Weight</label>
                        @Html.TextBoxFor(x => x.Weight, new { @class = "form-control", id = "weight", @type = "number", @style = "width=600px;" })
                        @Html.ValidationMessageFor(x => x.Weight, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Price</label>
                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @style = "width=600px;" })
                        @Html.TextBoxFor(x => x.Flag, new { Value = "True", @hidden = "true" })
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-md" value="Add Order" style="width:150px;" />
            </div>
        </div>

    }
</body>

</html>

