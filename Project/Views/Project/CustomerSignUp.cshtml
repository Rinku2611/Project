@model DeliveryInatechMvc.Models.CustomerTb
@{
    ViewBag.Title = "CustomerSignUp";
}

<h2>CustomerSignUp</h2>
<html>
<head>
    <link href="~/Bootstrap/CSS/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Bootstrap/JS/bootstrap.bundle.min.js"></script>
    <script src="~/Bootstrap/JS/bootstrap.min.js"></script>
    <script src="~/Bootstrap/JS/popper.min.js"></script>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <img src="~/Images/SignUp.jpg"  width="150px" height="100px" />
            <div class="collapse navbar-collapse" id="navbarSupportContent">
                <ul class="navbar-nav d-flex me-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Project", "Index") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("About Us", "Project", "Index") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Terms", "Project", "Index") &nbsp;&nbsp;
                    </li>
                </ul>
                <ul class="navbar-nav">

                    <li class="nav-item active">
                        @Html.ActionLink("View Booking", "ViewBooking", "Project") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Logout", "Index", "Project") &nbsp;&nbsp;
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    @using (Html.BeginForm("CustomerSignUp", "Project", FormMethod.Post))
    {
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @type = "text", @style = "width=600px;" })
                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label>Age</label>
                    @Html.TextBoxFor(x => x.Age, new { @class = "form-control", @type = "number", @style = "width=600px;" })
                    @Html.ValidationMessageFor(x => x.Age, null, new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Address</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @type = "text", @style = "width=600px;" })
                        @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Password</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @style = "width=600px;" })
                    @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @style = "width=600px;" })
                    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-success btn-md" value="SignUp" style="width:150px;" />
        </div>
    }
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>

