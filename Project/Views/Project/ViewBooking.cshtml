@model List<DeliveryInatechMvc.Models.BookingTb>
@{
    ViewBag.Title = "ViewBooking";
}

<h2>ViewBooking</h2>

<html>
<head>
    <link href="~/Bootstrap/CSS/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Bootstrap/JS/bootstrap.bundle.min.js"></script>
    <script src="~/Bootstrap/JS/bootstrap.min.js"></script>
    <script src="~/Bootstrap/JS/popper.min.js"></script>

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <img src="~/Images/LogoTruck.jpg" width="150px" height="100px" />
            <div class="collapse navbar-collapse" id="navbarSupportContent">
                <ul class="navbar-nav d-flex me-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Project", "Index") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("About Us", "Project", "Index") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Terms", "Project", "Index") &nbsp;&nbsp;
                    </li>
                </ul>
                <ul class="navbar-nav">

                    <li class="nav-item active">
                        @Html.ActionLink("Add Booking", "AddBooking", "Project") &nbsp;&nbsp;
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Logout", "Index", "Project") &nbsp;&nbsp;
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <h4><strong class="text-danger">@TempData["Message"]</strong></h4>
    <table id="t01" class="table table-bordered table-hover">
        <thead>
        <th>Booking Id</th>
        <th>Customer Id</th>
        <th>Date</th>
        <th>Time</th>
        <th>Weight</th>
        <th>Price</th>
        <th>Status</th>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.OrderId
                </td>
                <td>
                    @item.CustomerId
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Time
                </td>
                <td>
                    @item.Weight
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @if (item.Flag == true)
                    {
                        <label>Not Deliverd</label> }
                    else
                    {
                        <label> Deliverd</label>}
                </td>
                <td>
                    @if (item.Flag == false)
                    {
                        <a href="#" class="badge bg-warning">Delivered</a>
                    }
                    else
                    {
                        <a href=@Url.Action("CancelOrder",new { item.OrderId}) class="btn btn-danger">Cancel</a>
                        @*<a href=@Url.Action("CancelOrder") class="btn btn-danger">Cancel</a>*@
                    }



                </td>
            </tr>
        }



    </table>
</body>
</html>